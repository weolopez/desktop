{
  "startup": {
    "phases": [
      {
        "name": "critical",
        "parallel": true,
        "components": [
          {
            "name": "WallpaperManager",
            "path": "./wallpaper-manager.js",
            "required": true,
            "priority": 1,
            "enabled": true
          },
          {
            "name": "WindowManager", 
            "path": "./window-manager.js",
            "required": true,
            "priority": 1,
            "dependencies": ["AppService"],
            "enabled": true
          },
          {
            "name": "AppService",
            "path": "/wc/dynamic-component-system/src/index.js",
            "required": true,
            "priority": 1,
            "enabled": true
          }
        ]
      },
      {
        "name": "ui",
        "parallel": true,
        "waitFor": "critical",
        "components": [
          {
            "name": "ContextMenuManager",
            "path": "./context-menu-manager.js",
            "required": true,
            "priority": 2,
            "dependencies": ["WallpaperManager"],
            "enabled": true
          },
          {
            "name": "DockComponent",
            "path": "../components/dock-component.js",
            "required": true,
            "priority": 2,
            "enabled": true,
            "isWebComponent": true,
            "tagName": "dock-component"
          }
        ]
      },
      {
        "name": "optional",
        "parallel": true,
        "waitFor": "ui",
        "defer": true,
        "components": [
          {
            "name": "NotificationService",
            "path": "./notification-service.js",
            "required": false,
            "priority": 3,
            "enabled": true,
            "fallbackGraceful": true
          },
          {
            "name": "EventMonitor", 
            "path": "../events/event-monitor.js",
            "required": false,
            "priority": 3,
            "enabled": true
          },
          {
            "name": "WebLLMService",
            "path": "./webllm-service.js",
            "required": false,
            "priority": 3,
            "enabled": true,
            "fallbackGraceful": true,
            "config": {
              "workerPath": "../chat-component/chat-worker.js",
              "defaultModel": "Qwen2.5-0.5B-Instruct-q0f16-MLC",
              "autoInitialize": false,
              "serviceVersion": "1.0.0"
            }
          },
          {
            "name": "SpotlightComponent",
            "path": "/apps/spotlight/spotlight-component.js",
            "required": false,
            "priority": 4,
            "enabled": true,
            "isWebComponent": true,
            "tagName": "spotlight-component"
          },
          {
            "name": "NotificationDisplayComponent",
            "path": "./notification-display-component.js",
            "required": false,
            "priority": 4,
            "enabled": true,
            "isWebComponent": true,
            "tagName": "notification-display-component",
            "appendTo": "shadowRoot",
            "elementId": "notification-display",
            "connectTo": "NotificationService",
            "connectMethod": "setDisplayComponent"
          }
        ]
      }
    ],
    "performance": {
      "enableLazyLoading": true,
      "maxConcurrentLoads": 3,
      "timeoutMs": 5000,
      "retryAttempts": 2
    },
    "features": {
      "notifications": {
        "enabled": true,
        "soundsEnabled": true,
        "maxRetentionMs": 300000
      },
      "eventMonitoring": {
        "enabled": true,
        "debugMode": false
      },
      "webllm": {
        "enabled": true,
        "autoInitialize": false,
        "defaultModel": "Qwen2.5-0.5B-Instruct-q0f16-MLC",
        "supportedModels": [
          {
            "id": "Qwen2.5-0.5B-Instruct-q0f16-MLC",
            "name": "Qwen 0.5B (Fast)",
            "size": "small"
          },
          {
            "id": "DeepSeek-R1-Distill-Qwen-7B-q4f16_1-MLC", 
            "name": "DeepSeek 7B (Smart)",
            "size": "large"
          }
        ],
        "generationDefaults": {
          "temperature": 0.7,
          "maxTokens": 1024,
          "stream": true
        }
      }
    },
    "instantiation": {
      "WindowManager": {
        "constructorArgs": ["desktopComponent", "deps.AppService"],
        "postInit": null
      },
      "ContextMenuManager": {
        "constructorArgs": ["desktopComponent", "deps.WallpaperManager"],
        "postInit": null
      },
      "AppService": {
        "constructorArgs": [],
        "postInit": "init",
        "postInitArgs": ["desktopComponent"]
      },
      "NotificationService": {
        "constructorArgs": ["desktopComponent"],
        "postInit": null
      },
      "WebLLMService": {
        "constructorArgs": ["config.config"],
        "postInit": "initialize",
        "postInitArgs": [],
        "async": true
      },
      "default": {
        "constructorArgs": ["desktopComponent"],
        "postInit": null
      }
    }
  }
}


